<div class="row">
  <div class="col s12 center-align">
    <h3>Student Profile</h3>
  </div>
</div>

<div class="container center sign-up-box"
  <div class="row">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.name %></span>
            <p>Email: <%= @student.email %></p>
          <p>Course enrollments: None</p>
        </div>
      </div>
      <% if current_user == @student  %>
        <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
      <% end %>
    </div>
  </div>
</div>
